{
  "name": "@saiuttej/nestjs-request-store",
  "version": "0.1.0",
  "description": "Nestjs Request Store is a library that provides a simple and efficient way to manage request-scoped data in NestJS applications. It allows you to store and retrieve data specific to each HTTP request, making it easy to share information across different parts of your application without relying on global state or passing data through multiple layers of your code.",
  "author": "B Sai Uttej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saiuttej-b/nestjs-request-store"
  },
  "bugs": {
    "url": "https://github.com/saiuttej-b/nestjs-request-store/issues"
  },
  "keywords": [
    "nestjs",
    "request-store",
    "request-scoped",
    "middleware"
  ],
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublish": "npm run build",
    "start": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "local": "pnpm i && pnpm build && pnpm pack"
  },
  "packageManager": "pnpm@10.15.0",
  "peerDependencies": {
    "@nestjs/common": "^11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/common": "^11",
    "@types/node": "^24.3.0",
    "@types/express": "^5.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
